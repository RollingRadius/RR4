# Application Settings
APP_NAME=Fleet Management System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fleet_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fleet_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Authentication
SECRET_KEY=your-secret-key-min-32-chars-change-in-production-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Questions Encryption
# This key is used to encrypt security question answers
ENCRYPTION_MASTER_KEY=your-encryption-master-key-min-32-chars-change-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5000
CORS_ALLOW_CREDENTIALS=True

# Email Configuration (for verification and recovery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password-here
SMTP_FROM_EMAIL=noreply@fleetapp.com
SMTP_FROM_NAME=Fleet Management System

# Frontend URLs
FRONTEND_URL=http://localhost:3000
EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email
PASSWORD_RESET_URL=http://localhost:3000/reset-password

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Security Settings
# Account lockout after failed login attempts
MAX_FAILED_LOGIN_ATTEMPTS=3
ACCOUNT_LOCKOUT_MINUTES=30

# Token expiration
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24

# Security Questions Settings
REQUIRED_SECURITY_QUESTIONS_COUNT=3
MAX_RECOVERY_ATTEMPTS=3
RECOVERY_LOCKOUT_MINUTES=30
