# Fleet Management System - Production Environment Variables
# Copy this file to .env.production and fill in the values
# IMPORTANT: Never commit .env.production to version control!

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_123!
DB_HOST=postgres
DB_PORT=5432
DB_NAME=fleet_db
DB_USER=fleet_user
DATABASE_URL=postgresql://fleet_user:CHANGE_THIS_STRONG_PASSWORD_123!@postgres:5432/fleet_db

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_456!
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD_456!@redis:6379/0

# ============================================================================
# Application Security
# ============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY_GENERATED_WITH_OPENSSL

# Generate with: openssl rand -base64 32
ENCRYPTION_MASTER_KEY=CHANGE_THIS_TO_RANDOM_ENCRYPTION_KEY

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# CORS Settings - restrict to your domain
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOW_HEADERS=*

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# External Services
# ============================================================================
# OSRM Service
OSRM_BASE_URL=http://osrm:5000

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.pdf

# ============================================================================
# Monitoring & Logging (Optional)
# ============================================================================
SENTRY_DSN=
LOG_FILE=/app/logs/app.log

# ============================================================================
# Database Connection Pool
# ============================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
